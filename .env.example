# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Plisio Configuration (only Secret Key is needed)
# Get your secret key from Plisio dashboard
PLISIO_SECRET_KEY=your_plisio_secret_key_from_dashboard

# Admin Configuration (comma-separated Telegram IDs)
# Get your Telegram ID from @userinfobot
ADMIN_TELEGRAM_IDS=123456789,987654321

# Database Configuration
# For Railway: Use ${{DATABASE_URL}} or your PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_store

# Server Configuration
PORT=3000
# Generate a secure random string for webhook validation
WEBHOOK_SECRET=wh_sec_generate_random_32_chars_here
# Your Railway app URL or custom domain
BASE_URL=https://your-app.railway.app

# Security
# Generate a secure random string (64+ characters recommended)
JWT_SECRET=jwt_generate_random_64_chars_here_for_security

# Environment
NODE_ENV=production